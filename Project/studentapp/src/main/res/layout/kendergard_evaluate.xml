<?xml version="1.0"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginLeft="@dimen/base_dimen_10"
    android:layout_marginRight="@dimen/base_dimen_10"
    android:layout_marginTop="@dimen/base_dimen_10"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingLeft="@dimen/base_dimen_10"
    android:paddingRight="@dimen/base_dimen_10"
    app:cardCornerRadius="@dimen/base_dimen_8"
    app:cardElevation="@dimen/base_dimen_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingBottom="@dimen/base_dimen_20"
        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginRight="@dimen/base_dimen_20"


        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/base_dimen_20"


            >

            <TextView
                android:id="@+id/ivUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="评价"
                android:textSize="@dimen/base_dimen_32" />


            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:button="@null"
                android:gravity="center_vertical"
                android:text="更多"
                android:textColor="#f08786"
                android:textSize="@dimen/base_dimen_28" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/base_dimen_24"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_centerVertical="true"

                android:text="学生对园所评价"
                android:textSize="@dimen/base_dimen_28" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="详情"
                android:textColor="#f08786"
                android:textSize="@dimen/base_dimen_24" />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:layout_marginBottom="@dimen/base_dimen_20"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="整体评价"

                android:layout_gravity="center_vertical"
                android:textSize="@dimen/base_dimen_24" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:progressTint="#f06764"
                android:isIndicator="true"
                android:padding="@dimen/base_dimen_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_dimen_24"
                android:numStars="5"
                android:rating="2"
                style="@style/Widget.MaterialRatingBar.RatingBar.Small" />


        </LinearLayout>

           
        <View
            android:layout_width="match_parent"
            android:layerType="software"
            android:layout_marginBottom="@dimen/base_dimen_30"
            android:layout_height="5dp"

            android:background="@drawable/bg_dotted_line"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="园所情况"
            android:textColor="#999999"
            android:textSize="@dimen/base_dimen_24" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/base_dimen_16"


            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="园所规模"
                android:textColor="#4d4d4d"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/base_dimen_24" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:layout_marginLeft="@dimen/base_dimen_40"
                android:padding="@dimen/base_dimen_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="#707070"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="5"
                style="@style/Widget.MaterialRatingBar.RatingBar.Small" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/base_dimen_8"


            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#4d4d4d"
                android:text="地理位置"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/base_dimen_24" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:padding="@dimen/base_dimen_8"
                android:layout_marginLeft="@dimen/base_dimen_40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"        android:progressTint="#707070"
                android:isIndicator="true"

                android:numStars="5"
                android:rating="4"
                style="@style/Widget.MaterialRatingBar.RatingBar.Small" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/base_dimen_8"


            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="硬件设置"
                android:textColor="#4d4d4d"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/base_dimen_24" />

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:padding="@dimen/base_dimen_8"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/base_dimen_40"
                android:progressTint="#707070"
                android:isIndicator="true"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3"
                style="@style/Widget.MaterialRatingBar.RatingBar.Small" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/base_dimen_8"
            android:layout_marginBottom="@dimen/base_dimen_30"


            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="交通便利程度"
                android:textColor="#4d4d4d"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/base_dimen_24" />
            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:layout_marginLeft="@dimen/base_dimen_40"
                android:padding="@dimen/base_dimen_8"
                android:progressTint="#707070"
                android:isIndicator="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3.5"
                style="@style/Widget.MaterialRatingBar.RatingBar.Small" />


        </LinearLayout>
           
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_2"

            android:background="#e6e6e6"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"


            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/base_dimen_24"
                android:text="园区对学生的评价"
                android:textSize="@dimen/base_dimen_28" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="详情"
                android:textColor="#f08786"
                android:textSize="@dimen/base_dimen_24" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"


            android:layout_height="@dimen/base_dimen_110">


            <ImageView
                android:id="@+id/iv_head"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/base_dimen_96"
                android:layout_height="@dimen/base_dimen_96"
                android:scaleType="centerInside"
                android:layout_marginLeft="@dimen/base_dimen_30"
                android:src="@mipmap/head"/>
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/iv_head"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/base_dimen_15"
                >
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                 >
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"

                        android:text="张欢"
                        android:textColor="#313131"
                        android:textSize="@dimen/base_dimen_32" />

                </RelativeLayout>
                <RelativeLayout


                    android:layout_height="match_parent"
                    android:layout_width="wrap_content">
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"

                        android:text="刚开始有些不适应"
                        android:textColor="#a3a5a8"
                        android:textSize="@dimen/base_dimen_24" />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/tv_status"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"

                        android:text="评语"
                        android:textColor="#999999"
                        android:textSize="@dimen/base_dimen_24" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_2"
            android:layout_alignParentBottom="true"
            android:background="#e6e6e6"
            />
        <RelativeLayout
            android:layout_width="match_parent"


            android:layout_height="@dimen/base_dimen_110">


            <ImageView
                android:id="@+id/iv_head"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/base_dimen_96"
                android:layout_height="@dimen/base_dimen_96"
                android:scaleType="centerInside"
                android:layout_marginLeft="@dimen/base_dimen_30"
                android:src="@mipmap/head"/>
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/iv_head"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/base_dimen_15"
                >
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"

                        android:text="张欢"
                        android:textColor="#313131"
                        android:textSize="@dimen/base_dimen_32" />

                </RelativeLayout>
                <RelativeLayout


                    android:layout_height="match_parent"
                    android:layout_width="wrap_content">
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"

                        android:text="刚开始有些不适应"
                        android:textColor="#a3a5a8"
                        android:textSize="@dimen/base_dimen_24" />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/tv_status"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"

                        android:text="评语"
                        android:textColor="#999999"
                        android:textSize="@dimen/base_dimen_24" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>