<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <com.yijie.com.studentapp.view.CircleRelativeLayout
                android:gravity="center"
                app:background_color="@color/colorTheme"
                android:layout_width="@dimen/base_dimen_20"
                android:layout_height="@dimen/base_dimen_20">

            </com.yijie.com.studentapp.view.CircleRelativeLayout>
            <View
                android:id="@+id/view_line"
                android:background="@color/app_background"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/base_dimen_4"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_signTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                <ImageView
                    android:id="@+id/iv_picture"
                    android:scaleType="centerCrop"
                    android:layout_width="@dimen/base_dimen_100"
                    android:layout_height="@dimen/base_dimen_100"
                    android:layout_marginBottom="@dimen/base_dimen_50"
                    android:layout_marginTop="10dp"
               />

        </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>