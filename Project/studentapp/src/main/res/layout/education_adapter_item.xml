<?xml version="1.0" encoding="utf-8"?>
<com.yijie.com.studentapp.view.slipdelect.SlidingButtonView
    android:layout_height="@dimen/base_dimen_200"
    android:background="@color/app_background"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="@dimen/base_dimen_200"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/layout_content"
        android:background="@color/colorTheme"
        android:gravity="center"
        android:text="删 除"
        android:textColor="#DDFFFFFF"/>
    <RelativeLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:paddingLeft="@dimen/base_dimen_30"
                android:gravity="center_vertical"
                 android:layout_alignParentLeft="true"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_time"
                    android:paddingTop="@dimen/base_dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_collage"
                    android:paddingTop="@dimen/base_dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_education"
                    android:paddingTop="@dimen/base_dimen_10"
                    android:paddingBottom="@dimen/base_dimen_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:paddingRight="@dimen/base_dimen_30"
                android:background="@color/colorPrimary"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/goright"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

    </RelativeLayout>
    </RelativeLayout>


</com.yijie.com.studentapp.view.slipdelect.SlidingButtonView >