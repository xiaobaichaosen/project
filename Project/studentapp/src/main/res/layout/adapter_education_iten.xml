<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_dimen_34"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_dimen_18"
                android:text="毕业院校:"
                android:textColor="#999999"
                android:textSize="@dimen/base_dimen_28" />

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_dimen_18"
                android:text="专业:"
                android:textColor="#999999"
                android:textSize="@dimen/base_dimen_28" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_dimen_18"
                android:text="学历/学位:"
                android:textColor="#999999"
                android:textSize="@dimen/base_dimen_28" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_dimen_18"
                android:text="入学时间:"
                android:textColor="#999999"
                android:textSize="@dimen/base_dimen_28" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_dimen_18"
                android:text="毕业时间:"
                android:textColor="#999999"
                android:textSize="@dimen/base_dimen_28" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_dimen_34"
            android:layout_marginLeft="@dimen/base_dimen_114"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_college"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_dimen_18"
                android:text="河北冶金技术学院"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/base_dimen_28" />

            <TextView
                android:id="@+id/tv_major"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_dimen_18"
                android:text="英语专业"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/base_dimen_28" />

            <TextView
                android:id="@+id/tv_education"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_dimen_18"
                android:text="中专"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/base_dimen_28" />

            <TextView
                android:id="@+id/tv_startTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_dimen_18"
                android:text="2014年9月1日"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/base_dimen_28" />
            <TextView
                android:id="@+id/tv_gradTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/base_dimen_18"
                android:text="2017年6月1日"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/base_dimen_28" />

        </LinearLayout>
</LinearLayout>
