<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTheme"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_below="@+id/iv_back"
        android:orientation="vertical"
        android:paddingLeft="@dimen/base_dimen_70"
        android:paddingRight="@dimen/base_dimen_70"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/tv_registered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dimen_120"
            android:text="新用户注册"
            android:textColor="#ffffff"
            android:textSize="@dimen/base_dimen_32" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/base_dimen_90"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码"

                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/base_dimen_28" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/base_dimen_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:text="+86"
                    android:textSize="@dimen/base_dimen_32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />
                <View
                    android:layout_width="@dimen/base_dimen_2"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/base_dimen_20"

                    android:layout_marginRight="@dimen/base_dimen_20"
                    android:background="#80ffffff" />
                <EditText
                    android:id="@+id/et_phone"
                    android:textSize="@dimen/base_dimen_32"
                    android:background="@null"
                    android:textColorHint="#80ffffff"
                    android:textColor="#ffffff"
                    android:hint="请输入手机号码"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/base_dimen_30"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_2"
                android:background="#F6A4A2"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_marginTop="@dimen/base_dimen_32"
            android:background="@drawable/bg_round_ligtred"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/base_dimen_32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下一步" />

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dimen_30"
            android:text="点击下一步即表示您同意协议:"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/base_dimen_28" />
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/base_dimen_24"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="《服务协议》"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/base_dimen_28" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="《隐私政策》"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/base_dimen_28" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>