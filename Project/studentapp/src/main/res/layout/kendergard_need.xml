<?xml version="1.0"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/base_dimen_10"
    android:layout_marginRight="@dimen/base_dimen_10"
    android:layout_marginTop="@dimen/base_dimen_10"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingLeft="@dimen/base_dimen_10"
    android:paddingRight="@dimen/base_dimen_10"
    app:cardCornerRadius="@dimen/base_dimen_8"
    app:cardElevation="@dimen/base_dimen_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginRight="@dimen/base_dimen_20"


        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/base_dimen_34"


            >

            <TextView
                android:id="@+id/ivUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="园所需求"
                android:textSize="@dimen/base_dimen_32" />


            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:button="@null"
                android:gravity="center_vertical"
                android:text="更多"
                android:textColor="#f08786"
                android:textSize="@dimen/base_dimen_28" />


        </RelativeLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/base_dimen_30"
                android:orientation="vertical"


                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/base_dimen_34"


                    >

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="河北省石家庄市"
                        android:textColor="#4d4d4d"
                        android:textSize="@dimen/base_dimen_28" />
                    <TextView
                        android:layout_toRightOf="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#4d4d4d"
                        android:layout_marginLeft="@dimen/base_dimen_46"
                        android:text="50人"
                        android:textSize="@dimen/base_dimen_28" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#808080"
                        android:text="2017/9/25"
                        android:textSize="@dimen/base_dimen_24" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/base_dimen_20"


                    >

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="2017届"
                        android:textColor="#808080"
                        android:textSize="@dimen/base_dimen_24" />
                    <TextView
                        android:id="@+id/tv_education"
                        android:layout_toRightOf="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:layout_marginLeft="@dimen/base_dimen_16"
                        android:text="大专"
                        android:textSize="@dimen/base_dimen_24" />

                    <TextView
                        android:id="@+id/tv_stutas"
                        android:layout_toRightOf="@+id/tv_education"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#808080"
                        android:layout_marginLeft="@dimen/base_dimen_16"
                        android:text="顶岗实习"
                        android:textSize="@dimen/base_dimen_28" />
                    <TextView
                        android:id="@+id/tv_mounth"
                        android:layout_toRightOf="@+id/tv_stutas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#808080"
                        android:layout_marginLeft="@dimen/base_dimen_16"
                        android:text="8月"
                        android:textSize="@dimen/base_dimen_28" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#f06764"
                        android:text="需求5人"
                        android:textSize="@dimen/base_dimen_24" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_dimen_2"
                    android:background="#e6e6e6"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/base_dimen_34"


                    >

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="河北省石家庄市"
                        android:textColor="#4d4d4d"
                        android:textSize="@dimen/base_dimen_28" />
                    <TextView
                        android:layout_toRightOf="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#4d4d4d"
                        android:layout_marginLeft="@dimen/base_dimen_46"
                        android:text="50人"
                        android:textSize="@dimen/base_dimen_28" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#808080"
                        android:text="2017/9/25"
                        android:textSize="@dimen/base_dimen_24" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/base_dimen_20"


                    >

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="2017届"
                        android:textColor="#808080"
                        android:textSize="@dimen/base_dimen_24" />
                    <TextView
                        android:id="@+id/tv_education"
                        android:layout_toRightOf="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:layout_marginLeft="@dimen/base_dimen_16"
                        android:text="大专"
                        android:textSize="@dimen/base_dimen_24" />

                    <TextView
                        android:id="@+id/tv_stutas"
                        android:layout_toRightOf="@+id/tv_education"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#808080"
                        android:layout_marginLeft="@dimen/base_dimen_16"
                        android:text="顶岗实习"
                        android:textSize="@dimen/base_dimen_28" />
                    <TextView
                        android:id="@+id/tv_mounth"
                        android:layout_toRightOf="@+id/tv_stutas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#808080"
                        android:layout_marginLeft="@dimen/base_dimen_16"
                        android:text="8月"
                        android:textSize="@dimen/base_dimen_28" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#f06764"
                        android:text="需求5人"
                        android:textSize="@dimen/base_dimen_24" />


                </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>