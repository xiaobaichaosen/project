<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/base_dimen_30"
    android:paddingRight="@dimen/base_dimen_30"
    android:paddingTop="@dimen/base_dimen_20"
    android:paddingBottom="@dimen/base_dimen_20"
    android:layout_height="wrap_content">
<com.yijie.com.kindergartenapp.view.CircleImageView
    android:layout_centerVertical="true"
    android:id="@+id/iv_head"
    android:layout_width="@dimen/base_dimen_80"
    android:layout_height="@dimen/base_dimen_80" />
    <LinearLayout
        android:layout_toRightOf="@+id/iv_head"
        android:layout_marginLeft="@dimen/base_dimen_30"
        android:layout_toLeftOf="@+id/ll"
        android:layout_marginRight="@dimen/base_dimen_40"
        android:orientation="vertical"
         android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:text="贺巧"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_yearheightwight"
            android:text="18岁 168cm 50kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_nb"
            android:text="特长: 唱歌 钢琴"
            android:layout_marginRight="@dimen/base_dimen_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll"
        android:orientation="vertical"  android:layout_marginRight="@dimen/base_dimen_30"
        android:layout_alignParentRight="true"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:text="14:13"
        android:id="@+id/tv_createtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_status"
        android:text="代选"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>