<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    >
    <include layout="@layout/app_title"/>
    <TextView
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/base_dimen_30"
        android:layout_height="@dimen/base_dimen_100"
        android:gravity="center_vertical"
        android:text="三餐安排"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/base_dimen_2"
        android:background="@color/colorPrimary"
        android:paddingLeft="@dimen/base_dimen_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/cb_wu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_20"
            />
    </LinearLayout>
    <RadioGroup
        android:id="@+id/rp_all"
        android:background="@color/colorPrimary"
        android:paddingLeft="@dimen/base_dimen_30"

        android:padding="@dimen/base_dimen_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rb_threemeals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="园内三餐"
            android:layout_weight="1"
            />
        <RadioButton
            android:id="@+id/rb_twomeals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="两餐一补"
            android:layout_weight="1"
            />
        <RadioButton
            android:id="@+id/rb_allmeal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="全补"
            android:layout_weight="1"
            />

    </RadioGroup>
    <LinearLayout
        android:background="@color/colorPrimary"
        android:paddingLeft="@dimen/base_dimen_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/cb_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:text="当选择其他时,可填写相关内容"
            />
    </LinearLayout>

    <LinearLayout
        android:background="@color/colorPrimary"
        android:padding="@dimen/base_dimen_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/et_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingLeft="@dimen/base_dimen_10"
            android:background="@drawable/edittext_shap"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_60"/>
    </LinearLayout>
</LinearLayout>