<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
  >
<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/loading"
    android:orientation="vertical"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:padding="@dimen/base_dimen_30"
    android:layout_marginTop="@dimen/base_dimen_20"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="项目名称"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="学校城市"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="实习类型"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="学历"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="到京时间"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="管理模式"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="薪资"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="管理费用"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="招聘人数"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="特长要求"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="首次支付月数"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="招聘状态"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="查看协议"
            android:textColor="@color/pickerview_timebtn_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/base_dimen_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_projectName"
            android:text="项目名称"
            android:textColor="@color/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_shcoolcity"
            android:text="学校城市"
            android:textColor="@color/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="实习类型"
            android:id="@+id/tv_type"
            android:textColor="@color/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="学历"
            android:id="@+id/tv_education"
            android:textColor="@color/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="到京时间"
            android:id="@+id/tv_getTime"
            android:textColor="@color/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="管理模式"
            android:id="@+id/tv_mode"
            android:textColor="@color/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="薪资"
            android:id="@+id/tv_salery"
            android:textColor="@color/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="管理费用"
            android:id="@+id/tv_manageFree"
            android:textColor="@color/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_requestnum"
            android:text="招聘人数"
            android:textColor="@color/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_nb"
            android:text="特长需求"
            android:textColor="@color/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_firstpay"
            android:textColor="@color/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_status"
            android:textColor="@color/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
    <RelativeLayout
        android:id="@+id/ll_first"
        android:layout_below="@+id/ll_root"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:paddingLeft="@dimen/base_dimen_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_90">

        <TextView
            android:text="待付款"
            android:layout_alignParentLeft="true"
            android:textColor="@color/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_totalFree"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base_dimen_30"
            android:textColor="@color/colorTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_second"
        android:layout_below="@+id/ll_first"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:paddingLeft="@dimen/base_dimen_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_90">

        <TextView
            android:text="联系客服"
            android:textColor="@color/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:text="400-8888-8888"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/ll_second"
        android:layout_width="match_parent"
        android:padding="@dimen/base_dimen_30"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="订单编号"
                android:textColor="@color/item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="支付方式"
                android:textColor="@color/item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="创建时间"
                android:textColor="@color/item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_ordernum"
                android:text="订单编号"
                android:textColor="@color/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_payway"
                android:text="在线支付"
                android:textColor="@color/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="创建时间"
                android:id="@+id/tv_createtime"
                android:textColor="@color/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
         android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_90">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_dimen_30"
            android:background="@drawable/text_border_shap"
            android:text="取消招聘"
            android:textColor="@color/item_title" />
    </RelativeLayout>
</LinearLayout>
</ScrollView>
