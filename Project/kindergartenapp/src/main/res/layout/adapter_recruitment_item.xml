<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_time"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/base_dimen_10"
      android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:background="@color/item_content"
       />

    </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_marginLeft="@dimen/base_dimen_30"
                android:layout_marginRight="@dimen/base_dimen_30"
                app:cardCornerRadius="@dimen/base_dimen_8"
                app:cardElevation="@dimen/base_dimen_2">
                <LinearLayout
                    android:padding="@dimen/base_dimen_30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:textColor="@color/colorTheme"
                        android:layout_width="match_parent"
                        android:text="招聘发布"
                        android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginTop="@dimen/base_dimen_40"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="@color/item_content"
                            android:layout_width="wrap_content"
                            android:text="项目名称"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="@dimen/base_dimen_10"
                            android:textColor="@color/item_content"
                            android:layout_width="wrap_content"
                            android:text="学校城市"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="@dimen/base_dimen_10"
                            android:textColor="@color/item_content"
                            android:layout_width="wrap_content"
                            android:text="薪资"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="@dimen/base_dimen_10"
                            android:textColor="@color/item_content"
                            android:layout_width="wrap_content"
                            android:text="管理费用"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="@dimen/base_dimen_10"
                            android:textColor="@color/item_content"
                            android:layout_width="wrap_content"
                            android:text="招聘人数"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="@dimen/base_dimen_10"
                            android:textColor="@color/item_content"
                            android:layout_width="wrap_content"
                            android:text="特长要求"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/base_dimen_30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_projectName"
                            android:layout_marginLeft="@dimen/base_dimen_10"
                            android:textColor="@color/item_title"
                            android:layout_width="wrap_content"
                            android:text="2018 大专 顶岗实习 9月到京"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="@dimen/base_dimen_10"
                            android:id="@+id/tv_address"
                            android:layout_marginLeft="@dimen/base_dimen_10"
                            android:textColor="@color/item_title"
                            android:layout_width="wrap_content"
                            android:text="河北省石家庄市"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="@dimen/base_dimen_10"
                            android:id="@+id/tv_salery"
                            android:layout_marginLeft="@dimen/base_dimen_10"
                            android:textColor="@color/item_title"
                            android:layout_width="wrap_content"
                            android:text="1800"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="@dimen/base_dimen_10"
                            android:id="@+id/tv_manageFree"
                            android:layout_marginLeft="@dimen/base_dimen_10"
                            android:textColor="@color/item_title"
                            android:layout_width="wrap_content"
                            android:text="1800"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="@dimen/base_dimen_10"
                            android:id="@+id/tv_number"
                            android:layout_marginLeft="@dimen/base_dimen_10"
                            android:textColor="@color/item_title"
                            android:layout_width="wrap_content"
                            android:text="5人"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="@dimen/base_dimen_10"
                            android:id="@+id/tv_nb"
                            android:layout_marginLeft="@dimen/base_dimen_10"
                            android:textColor="@color/item_title"
                            android:layout_width="wrap_content"
                            android:text="钢琴、 思维课、美术、日语"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
                    <View
                        android:layout_marginTop="@dimen/base_dimen_30"
                        android:background="@color/app_background"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/base_dimen_2"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                <TextView
                    android:text="查看详情"
                    android:layout_marginTop="@dimen/base_dimen_30"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                        <TextView
                            android:drawableRight="@mipmap/goright"
                            android:layout_marginTop="@dimen/base_dimen_30"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

</LinearLayout>
