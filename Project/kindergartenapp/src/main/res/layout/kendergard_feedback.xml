<?xml version="1.0"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/base_dimen_10"
    android:layout_marginRight="@dimen/base_dimen_10"
    android:layout_marginTop="@dimen/base_dimen_10"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingLeft="@dimen/base_dimen_10"
    android:paddingRight="@dimen/base_dimen_10"
    app:cardCornerRadius="@dimen/base_dimen_8"
    app:cardElevation="@dimen/base_dimen_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginRight="@dimen/base_dimen_20"


        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/base_dimen_34"


            >

            <TextView
                android:id="@+id/ivUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="问题提交"
                android:textSize="@dimen/base_dimen_32" />


            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:button="@null"
                android:gravity="center_vertical"
                android:text="更多"
                android:textColor="#f08786"
                android:textSize="@dimen/base_dimen_28" />


        </RelativeLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_dimen_30"
            android:orientation="vertical"


            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/base_dimen_34"


                >

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="李瑶瑶实习期间，经常请假，对工作不负责任"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/base_dimen_24" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/base_dimen_20"


                >

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="问题类型:"
                    android:textColor="#808080"
                    android:textSize="@dimen/base_dimen_24" />
                <TextView
                    android:id="@+id/tv_education"
                    android:layout_toRightOf="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:layout_marginLeft="@dimen/base_dimen_16"
                    android:text="学生"
                    android:textSize="@dimen/base_dimen_24" />

                <TextView
                    android:id="@+id/tv_stutas"
                    android:layout_toRightOf="@+id/tv_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:layout_marginLeft="@dimen/base_dimen_16"
                    android:text="10:40"
                    android:textSize="@dimen/base_dimen_28" />
                <TextView
                    android:id="@+id/tv_mounth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#f06764"
                    android:layout_marginLeft="@dimen/base_dimen_16"
                    android:text="处理中"
                    android:textSize="@dimen/base_dimen_28" />



            </RelativeLayout>






        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_2"
            android:background="#e6e6e6"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_dimen_30"
            android:orientation="vertical"


            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/base_dimen_34"


                >

                <TextView
                    android:id="@+id/tv_address2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="李瑶瑶实习期间，经常请假，对工作不负责任"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/base_dimen_24" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/base_dimen_20"


                >

                <TextView
                    android:id="@+id/tv_age2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="问题类型:"
                    android:textColor="#808080"
                    android:textSize="@dimen/base_dimen_24" />
                <TextView
                    android:id="@+id/tv_education2"
                    android:layout_toRightOf="@+id/tv_age2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:layout_marginLeft="@dimen/base_dimen_16"
                    android:text="学生"
                    android:textSize="@dimen/base_dimen_24" />

                <TextView
                    android:id="@+id/tv_stutas2"
                    android:layout_toRightOf="@+id/tv_education2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:layout_marginLeft="@dimen/base_dimen_16"
                    android:text="10:40"
                    android:textSize="@dimen/base_dimen_28" />
                <TextView
                    android:id="@+id/tv_mounth2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#f06764"
                    android:layout_marginLeft="@dimen/base_dimen_16"
                    android:text="处理中"
                    android:textSize="@dimen/base_dimen_28" />



            </RelativeLayout>






        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>