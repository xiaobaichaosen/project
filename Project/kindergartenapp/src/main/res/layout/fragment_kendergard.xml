<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_46"
        android:background="@color/colorTheme"
        android:fitsSystemWindows="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<include layout="@layout/app_title"/>





    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_below="@+id/app_title"
        android:background="@color/colorPrimary"
        android:id="@+id/swipe_refresh_layout"
        style="@style/layout_mm"
     >
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:text="正在招聘的园所"     android:textColor="#4d4d4d"
                android:textSize="@dimen/base_dimen_32"
                android:background="@color/app_background"
                android:paddingLeft="@dimen/base_dimen_30"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_80" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_loading"
                    style="@style/layout_mm" />

                <TextView
                    android:background="@color/app_background"
                    android:paddingLeft="@dimen/base_dimen_30"
                    android:gravity="center_vertical"
                    android:textColor="#4d4d4d"
                    android:textSize="@dimen/base_dimen_32"
                    android:text="往前合作过的园所"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/base_dimen_80"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    style="@style/layout_mm" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</LinearLayout>