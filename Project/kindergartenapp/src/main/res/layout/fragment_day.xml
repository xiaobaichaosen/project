<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:background="@color/app_background"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/base_dimen_30"
        android:background="@color/colorPrimary"
        android:layout_marginTop="@dimen/base_dimen_2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingRight="@dimen/base_dimen_30"
        android:layout_height="@dimen/base_dimen_80">
        <TextView
            android:text="应到人数"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="7"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/base_dimen_30"
        android:background="@color/colorPrimary"
        android:layout_marginTop="@dimen/base_dimen_2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingRight="@dimen/base_dimen_30"
        android:layout_height="@dimen/base_dimen_80">
        <TextView
            android:text="打卡人数"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="7"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="0"
            android:textColor="@color/colorTheme"
            android:drawableRight="@mipmap/goright"
            android:text="打卡明细"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/base_dimen_30"
        android:background="@color/colorPrimary"
        android:layout_marginTop="@dimen/base_dimen_2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingRight="@dimen/base_dimen_30"
        android:layout_height="@dimen/base_dimen_80">
        <TextView
            android:text="未打卡"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="7"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="0"
            android:textColor="@color/colorTheme"
            android:drawableRight="@mipmap/goright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="@dimen/base_dimen_30"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/base_dimen_2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingRight="@dimen/base_dimen_30"
        android:layout_height="@dimen/base_dimen_80">
        <TextView
            android:text="迟到"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="7"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="0"
            android:textColor="@color/colorTheme"
            android:drawableRight="@mipmap/goright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="@dimen/base_dimen_30"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/base_dimen_2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingRight="@dimen/base_dimen_30"
        android:layout_height="@dimen/base_dimen_80">
        <TextView
            android:text="请假"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="7"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="0"
            android:textColor="@color/colorTheme"
            android:drawableRight="@mipmap/goright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>