<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/base_dimen_34"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dimen_18"
            android:text="公司名称:"
            android:textColor="#999999"
            android:textSize="@dimen/base_dimen_28" />

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dimen_18"
            android:text="时间:"
            android:textColor="#999999"
            android:textSize="@dimen/base_dimen_28" />

        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dimen_18"
            android:text="职务:"
            android:textColor="#999999"
            android:textSize="@dimen/base_dimen_28" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_dimen_34"
        android:layout_marginLeft="@dimen/base_dimen_114"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_companyName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dimen_18"
            android:text="国际幼儿园"
            android:textColor="#4d4d4d"
            android:textSize="@dimen/base_dimen_28" />

        <TextView
            android:id="@+id/tv_workDue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dimen_18"
            android:text="2011/6-2013/9"
            android:textColor="#4d4d4d"
            android:textSize="@dimen/base_dimen_28" />

        <TextView
            android:id="@+id/tv_post"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_dimen_18"
            android:text="三班教师"
            android:textColor="#4d4d4d"
            android:textSize="@dimen/base_dimen_28" />
    </LinearLayout>
</LinearLayout>
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="工作描述:"
        android:textSize="@dimen/base_dimen_28" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_dimen_18"
        android:text="我曾在广州天河庄幼儿园担任教师一职,和小朋友和教师有良好的沟通。"
        android:textColor="#4d4d4d"
        android:textSize="@dimen/base_dimen_28" />
        </LinearLayout>