<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/base_dimen_36"
    android:layout_marginBottom="@dimen/base_dimen_60"
    android:orientation="horizontal"
   >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/base_dimen_28"
        android:orientation="vertical">
    <ImageView
        android:layout_width="@dimen/base_dimen_100"
        android:layout_height="@dimen/base_dimen_100"
        android:background="@mipmap/head" />
        <TextView
            android:layout_marginTop="@dimen/base_dimen_26"
            android:layout_width="wrap_content"
           android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="保育员"
            android:textSize="@dimen/base_dimen_28"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_28"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张欢"
            android:textSize="@dimen/base_dimen_28"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="刚开始实习有些不适应，慢慢就会变好" />

        <com.yijie.com.yijie.view.NineGridTestLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/layout_nine_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/base_dimen_60"
            android:layout_marginTop="@dimen/base_dimen_16"
            app:sapcing="@dimen/base_dimen_8" />


    </LinearLayout>
</LinearLayout>