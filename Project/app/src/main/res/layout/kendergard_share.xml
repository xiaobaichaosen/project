<?xml version="1.0"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/base_dimen_10"
    android:layout_marginRight="@dimen/base_dimen_10"
    android:layout_marginTop="@dimen/base_dimen_10"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingLeft="@dimen/base_dimen_10"
    android:paddingRight="@dimen/base_dimen_10"
    app:cardCornerRadius="@dimen/base_dimen_8"
    app:cardElevation="@dimen/base_dimen_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginLeft="@dimen/base_dimen_20"
        android:layout_marginRight="@dimen/base_dimen_20"


        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/base_dimen_34"
            >

            <TextView
                android:id="@+id/ivUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="学生分享"
                android:textSize="@dimen/base_dimen_32" />


            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="更多"
                android:textColor="#f08786"
                android:textSize="@dimen/base_dimen_28" />


        </RelativeLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="@dimen/base_dimen_80"
                        android:layout_height="@dimen/base_dimen_100"
                        android:background="@mipmap/head" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="王颖"
                            android:textSize="@dimen/base_dimen_28"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="刚开始有些不适应" />

                        <com.yijie.com.yijie.view.NineGridTestLayout
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/layout_nine_grid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:sapcing="4dp" />
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="#011fff"
                            android:layout_height="wrap_content"
                            android:text="山东德州技术学院" />
                            <TextView
                                android:layout_marginLeft="@dimen/base_dimen_20"
                                android:layout_width="wrap_content"
                                android:textColor="#011fff"
                                android:layout_height="wrap_content"
                                android:text="中专" />
                            <TextView
                                android:layout_marginLeft="@dimen/base_dimen_20"
                                android:layout_width="wrap_content"
                                android:textColor="#011fff"
                                android:layout_height="wrap_content"
                                android:text="2017/5/25" />
                        </LinearLayout>
                    </LinearLayout>



            </LinearLayout>






    </LinearLayout>

</android.support.v7.widget.CardView>