<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:paddingTop="@dimen/base_dimen_20"
    android:paddingLeft="@dimen/base_dimen_30"
    android:paddingRight="@dimen/base_dimen_30"
    android:layout_height="wrap_content">
    <com.yijie.com.yijie.view.CircleImageView
        android:id="@+id/iv_logo"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/base_dimen_90"
        android:layout_height="@dimen/base_dimen_90" />

    <LinearLayout
        android:layout_marginLeft="@dimen/base_dimen_30"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/ll_center"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_head"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_projectName"
            android:textColor="@color/item_title"
           android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_createTime"
            android:textColor="@color/item_content"
            android:layout_alignParentRight="true"
            android:text="13.25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/base_dimen_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/tv_schoolName"
            android:textColor="@color/item_title"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_check"
            android:text="查看项目"
            android:textColor="@color/colorTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/base_dimen_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/item_title"
            android:text="培训时间"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toRightOf="@+id/tv_year"
            android:textColor="@color/item_content"
            android:layout_marginLeft="@dimen/base_dimen_50"
            android:id="@+id/tv_trainDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <TextView
            android:textColor="@color/item_content"

            android:id="@+id/tv_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>