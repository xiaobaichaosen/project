<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="@dimen/base_dimen_30"
    android:layout_height="wrap_content"
   >
    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <ImageView
        android:src="@mipmap/head"
        android:gravity="center"
        android:layout_width="@dimen/base_dimen_96"
        android:layout_height="@dimen/base_dimen_96"
     />
        <TextView
            android:id="@+id/tv_name"
            android:layout_gravity="center"
            android:textSize="@dimen/base_dimen_28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ll_name"

        android:background="@mipmap/chatfrom_bg_focused"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mycontent"
            android:paddingLeft="@dimen/base_dimen_10"
            android:layout_marginTop="@dimen/base_dimen_10"
            android:paddingRight="@dimen/base_dimen_10"
            android:textColor="@color/item_title"
            android:text="聊天内容"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/base_dimen_30" />
        <TextView
            android:id="@+id/tv_projectName"
            android:paddingLeft="@dimen/base_dimen_10"
            android:paddingTop="@dimen/base_dimen_10"
            android:paddingRight="@dimen/base_dimen_10"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:textColor="@color/item_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/base_dimen_28" />
        <TextView
            android:id="@+id/tv_date"
            android:textColor="@color/item_content"
            android:padding="@dimen/base_dimen_10"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/base_dimen_28" />
    </LinearLayout>

</RelativeLayout>