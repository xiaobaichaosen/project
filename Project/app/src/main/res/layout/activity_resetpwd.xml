<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/app_background"

    android:layout_height="match_parent">
    <include
        layout="@layout/app_title"/>
    <TextView
        android:id="@+id/tv_showPhoneNumber"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/base_dimen_30"
        android:layout_height="@dimen/base_dimen_90" />
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/base_dimen_30"
        android:paddingRight="@dimen/base_dimen_30"
        android:orientation="horizontal"
        android:layout_height="@dimen/base_dimen_90">
        <TextView
            android:text="验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_smscode"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:background="@null"
            android:hint="请输入验证码"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/base_dimen_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="right"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <View
            android:layout_width="@dimen/base_dimen_2"
            android:background="@color/app_background"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_sendsms"
            android:text="重发验证码"
            android:textColor="@color/tab_checked"
            android:paddingLeft="@dimen/base_dimen_30"
            android:paddingTop="@dimen/base_dimen_20"
            android:paddingBottom="@dimen/base_dimen_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/app_background"
        android:layout_marginLeft="@dimen/base_dimen_30"
        android:layout_height="@dimen/base_dimen_2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/base_dimen_30"
        android:paddingRight="@dimen/base_dimen_30"
        android:orientation="horizontal"
        android:layout_height="@dimen/base_dimen_90">
        <TextView
            android:text="新密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_pwd"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:background="@null"
            android:hint="请输入新密码"
            android:password="true"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/base_dimen_60"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/cb_isVisiable"
            style="@style/registpdStyle"
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            />
    </LinearLayout>

    </LinearLayout>
    <TextView
        android:text="下一步"
        android:id="@+id/tv_next"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/text_radius_shap"
        android:layout_marginLeft="@dimen/base_dimen_30"
        android:layout_marginRight="@dimen/base_dimen_30"
        android:layout_marginTop="@dimen/base_dimen_40"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_90" />
</LinearLayout>