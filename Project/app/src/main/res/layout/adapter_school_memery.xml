<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:paddingLeft="@dimen/base_dimen_30"
    android:paddingTop="@dimen/base_dimen_20"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/memery_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
      <LinearLayout
          android:layout_marginLeft="@dimen/base_dimen_40"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/memery_content"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/memery_date"
              android:layout_marginTop="@dimen/base_dimen_10"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:id="@+id/tv_gone"
             android:background="@color/app_background"
              android:layout_width="match_parent"
              android:layout_height="@dimen/base_dimen_2" />

      </LinearLayout>

    </LinearLayout>
