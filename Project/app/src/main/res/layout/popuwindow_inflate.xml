<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="#00000000"
    android:layout_margin="@dimen/base_dimen_30"
    android:layout_height="@dimen/base_dimen_90">
   <TextView
       android:id="@+id/tv_edit"
       android:drawableRight="@mipmap/icon_worn"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:padding="@dimen/base_dimen_50"
       android:layout_height="wrap_content" />

    <TextView
        android:padding="@dimen/base_dimen_50"
        android:id="@+id/tv_delect"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/icon_delect" />
    <TextView
        android:id="@+id/tv_contactProject"
        android:padding="@dimen/base_dimen_50"
        android:drawableRight="@mipmap/icon_project"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
</LinearLayout>