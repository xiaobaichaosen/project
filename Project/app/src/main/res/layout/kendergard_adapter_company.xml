<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginTop="@dimen/base_dimen_30"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginLeft="@dimen/base_dimen_30"
        android:layout_marginBottom="@dimen/base_dimen_20"
        android:layout_marginTop="@dimen/base_dimen_20"
        style="@style/layout_mw">
        <ImageView
            android:id="@+id/iv_kendegard"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/shool_pictor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_kendegard"
            android:padding="@dimen/base_dimen_10"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/school_name"
            style="@style/layout_ww"
            android:text="国际幼稚园"
            android:textColor="#4d4d4d"
            android:textSize="@dimen/base_dimen_32" />
        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:progressTint="#f06764"
            android:isIndicator="true"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="2"
            style="@style/Widget.MaterialRatingBar.RatingBar.Small" /></LinearLayout>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base_dimen_30"
            android:id="@+id/tv_data"
            style="@style/layout_ww"
android:layout_centerVertical="true"
            android:text="2017/09/28"
            android:textColor="#999999"
            android:textSize="@dimen/base_dimen_22" />

    </RelativeLayout>





</LinearLayout>