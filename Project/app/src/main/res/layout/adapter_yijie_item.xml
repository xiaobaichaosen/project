<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:clickable="true"
    android:background="@color/colorPrimary"
    android:paddingTop="@dimen/base_dimen_20"
    android:paddingBottom="@dimen/base_dimen_20"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/base_dimen_60"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/tab_checked"
            android:text="别忘记录工作日志哦!"
            android:textSize="@dimen/base_dimen_32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:text="今天的工作完成了哪些？"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base_dimen_60"
            android:drawableRight="@mipmap/filepic" />

</RelativeLayout>