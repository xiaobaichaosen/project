<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/app_background"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:paddingLeft="@dimen/base_dimen_20"
        android:paddingBottom="@dimen/base_dimen_20"
        android:paddingTop="@dimen/base_dimen_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
 <ImageView
     android:id="@+id/iv_head"
     android:layout_alignParentLeft="true"
     android:src="@mipmap/shool_pictor"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" />
<LinearLayout
    android:layout_marginLeft="@dimen/base_dimen_30"
    android:layout_toRightOf="@+id/iv_head"
    android:layout_centerVertical="true"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_name"
        android:text="王颖"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_cellphone"
        android:text="18914165289"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_schoolName"
        android:layout_marginTop="@dimen/base_dimen_10"
        android:text="河北新华冶金技工学校"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    </RelativeLayout>
</LinearLayout>