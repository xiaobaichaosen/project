<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    android:id="@+id/ll_root"
    android:paddingTop="@dimen/base_dimen_30"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"

    android:background="@color/colorPrimary"
    android:layout_height="match_parent">
    <RelativeLayout
        android:paddingLeft="@dimen/base_dimen_30"
        android:layout_marginRight="@dimen/base_dimen_30"

        android:paddingTop="@dimen/base_dimen_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_60">
        <TextView
            android:text="学校简介"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_simple_edit"
            android:text="编辑"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base_dimen_30"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>


<android.support.v7.widget.RecyclerView
    android:id="@+id/recycler_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_dimen_400"/>
    <com.yijie.com.yijie.view.ExpandableTextView
        android:paddingLeft="@dimen/base_dimen_30"
        android:paddingRight="@dimen/base_dimen_30"
        android:id="@+id/expand_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        expandableTextView:animAlphaStart="1"
        expandableTextView:maxCollapsedLines="4">
        <TextView
            android:id="@id/expandable_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-light"
            android:textSize="16sp"/>
        <ImageButton
            android:id="@id/expand_collapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:background="@android:color/transparent"
            android:padding="16dp" />

    </com.yijie.com.yijie.view.ExpandableTextView>


    <View
        android:layout_width="match_parent"
        android:layout_margin="@dimen/base_dimen_30"
        android:background="@color/app_background"
        android:layout_height="@dimen/base_dimen_2"/>
    <RelativeLayout
        android:paddingLeft="@dimen/base_dimen_30"
        android:layout_marginRight="@dimen/base_dimen_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_60">
        <TextView
            android:text="联系方式"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_contact_edit"
            android:text="编辑"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/base_dimen_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/base_dimen_20"
        android:paddingLeft="@dimen/base_dimen_30"
        android:layout_marginRight="@dimen/base_dimen_30"
        android:paddingBottom="@dimen/base_dimen_30"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView

            android:text="姓名"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:text="座机"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:text="手机"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:text="地址"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/base_dimen_30"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_ziNumber"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_phone"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_adress"
            android:textColor="@color/item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </LinearLayout>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>
