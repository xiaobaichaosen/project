<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="wrap_content">


<com.yijie.com.yijie.view.CircleImageView
    android:id="@+id/iv_logo"
    android:layout_marginLeft="@dimen/base_dimen_30"
    android:layout_marginTop="@dimen/base_dimen_50"
    android:layout_width="@dimen/base_dimen_110"
    android:layout_height="@dimen/base_dimen_110" />
    <LinearLayout
        android:layout_marginLeft="@dimen/base_dimen_30"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="@dimen/base_dimen_20"
        style="@style/layout_mw">

        <TextView
            android:text="河北省新华冶金技工学校"
            android:id="@+id/school_name"
            style="@style/layout_ww"
            android:textColor="#4d4d4d"
            android:textSize="@dimen/base_dimen_28" />

        <TextView

            android:id="@+id/tv_data"
            style="@style/layout_ww"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:text="2017/09/28"
            android:textColor="#999999"
            android:textSize="@dimen/base_dimen_22" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/base_dimen_20"
        style="@style/layout_mw">

        <TextView
            android:text="张老师"
            android:id="@+id/tv_name"
            style="@style/layout_ww"
            android:textColor="#808080"
            android:textSize="@dimen/base_dimen_28" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/layout_ww"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:layout_toRightOf="@+id/tv_name"
            android:text="13546578963"
            android:textColor="#808080"
            android:textSize="@dimen/base_dimen_28" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_count"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="@dimen/base_dimen_20"
        style="@style/layout_mw">
        <TextView
            android:id="@+id/tv_projectSum"
            android:paddingTop="@dimen/base_dimen_10"
    android:paddingLeft="@dimen/base_dimen_10"
            android:paddingRight="@dimen/base_dimen_10"
            android:paddingBottom="@dimen/base_dimen_10"
            style="@style/layout_ww"
            android:textColor="#FBA386"
            android:textSize="@dimen/base_dimen_28" />
        <TextView

            android:id="@+id/tv_developSum"
            android:layout_marginLeft="@dimen/base_dimen_30"
            android:padding="@dimen/base_dimen_10"
            style="@style/layout_ww"
            android:textColor="#FBA386"
            android:textSize="@dimen/base_dimen_28" />

        <TextView

            android:id="@+id/tv_noTrain"
            android:padding="@dimen/base_dimen_10"
            android:layout_marginLeft="@dimen/base_dimen_30"
            style="@style/layout_ww"
            android:textColor="#FBA386"
            android:textSize="@dimen/base_dimen_28" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_edit"
        style="@style/layout_ww"
        android:text="我是备忘录"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="@dimen/base_dimen_20"
        android:layout_marginTop="@dimen/base_dimen_20"
        android:layout_marginRight="@dimen/base_dimen_30"
        android:layout_toRightOf="@+id/tv_training_time"
        android:drawablePadding="@dimen/base_dimen_20"
        android:textColor="#808080"
        android:textSize="@dimen/base_dimen_24" />

    </LinearLayout>
</LinearLayout>