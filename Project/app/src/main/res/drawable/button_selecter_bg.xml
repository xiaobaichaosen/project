<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@color/color_gray" android:state_pressed="true">
        <shape android:shape="oval">
            <corners
                android:radius="8dp"/>
            <stroke
                android:width="3dp"
                android:color="@color/color_gray"/>

        </shape>
    </item>
    <item android:drawable="@color/color_gray" android:state_selected="true">
        <shape android:shape="oval">
            <corners
                android:radius="8dp"/>
            <stroke
                android:width="3dp"
                android:color="@color/color_gray"/>

        </shape>

    </item>

    <item android:drawable="@color/colorPrimary" android:state_enabled="true">

        <shape android:shape="oval">
            <corners
                android:radius="8dp"/>
            <stroke
                android:width="3dp"
                android:color="@color/colorPrimary"/>

        </shape>
    </item>

</selector>
